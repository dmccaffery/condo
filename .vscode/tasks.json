{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docs",
      "command": "hugo",
      "type": "process",
      "args": [
        "server",
        "--source",
        "docs",
        "--destination",
        "../artifacts/docs",
        "--watch",
        "--buildDrafts",
        "--enableGitInfo",
        "--i18n-warnings"
      ],
      "problemMatcher": "$go",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
